.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-top: 10px;
}

.nickname {
  margin-top:10px;
  font-size: 13px;
  color: #333;
}

.login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px 16px;
  background-color: #7cba59;
  color: #FFFFFF;
  border-radius: 20px;
  margin-top: 20px;
  font-size: 14px;
}

.logout-btn {
  font-size: 14px;
  color: #8a8a8a;
  /* text-decoration: underline; */
  margin-top: 10px;
}

.card {
  margin-top:20px;
  padding: 10px;
  border-top: 1rpx solid #ccc;
  /* background-color: #fff; */
  /* box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); */
  /* border-radius: 5px; */
  width: 100%;
}
.card-title {
  font-size: 14px;
  margin-bottom: 10px;
  margin-left: 10px;
}
.collect-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-left: 10px;
}
.collect-item {
  width: 33.33%;
  padding-right: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-cover {
  width: 100%;
  height: 90px; 
  border-radius: 6px;
  object-fit: cover;
}
.item-title {
  font-size: 12px;
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.no-collect {
  margin-top: 20px;
  margin-left: 20px;
  text-align: center;
  color: #999999;
  font-size: 14px;
}

.go-home {
  color: #7cba59;
  text-decoration: none;
}

/* 弹层样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 500rpx;
  height: 500rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  text-align: center;
  border-radius: 5px;
}
.btn-login {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px 16px;
  background-color: #7cba59;
  color: #FFFFFF;
  border-radius: 20px;
  margin-top: 20px;
  font-size: 14px;
}
